<Window x:Class="DeansOffice.Pages.GroupEditDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeansOffice.Pages"
      mc:Ignorable="d"
    Title="Редактирование группы"
     Width="422"
     SizeToContent="Height"
     WindowStartupLocation="CenterOwner"
     Background="#252526" Height="256">

    <StackPanel Margin="10">
        <TextBlock Text="Имя группы:" Foreground="White" Margin="0,5"/>
        <TextBox x:Name="txtGroupName" />

        <TextBlock Text="Курс:" Foreground="White" Margin="0,5"/>
        <TextBox x:Name="txtCourse"  />

        <TextBlock Text="Направление:" Foreground="White" Margin="0,5"/>
        <TextBox x:Name="txtSpeciality" />

        <TextBlock Text="ID Куратора:" Foreground="White" Margin="0,5"/>
        <TextBox x:Name="txtCuratorID"  />






        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" Click="btnSave_Click" Style="{StaticResource PrimaryButtonStyle}" Width="100"/>
            <Button Content="Отмена" Click="btnCancel_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>
